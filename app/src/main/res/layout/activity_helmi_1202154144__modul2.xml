<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.helmikhairullah.helmi_1202154144_modul2.HELMI_1202154144_MODUL2">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/dota2"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/pilihmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="108dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="49dp"
        android:text="PILIH MENU :" />

    <RadioGroup
        android:id="@+id/asik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pilihmenu"
        android:layout_alignStart="@+id/pilihmenu"
        android:layout_below="@+id/pilihmenu">

    <RadioButton
        android:id="@+id/radioDineIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Dine In" />

    <RadioButton
        android:id="@+id/radioTakeAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Away" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/asik"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginTop="29dp"
        android:text="Pesan sekarang"
        android:onClick="pesansekarang"/>

</RelativeLayout>
